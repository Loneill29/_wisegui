<!DOCTYPE html>
<html>
  <head>
    <title>Wisegui</title>
    <%= csrf_meta_tags %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Crimson+Text:400,600,700" rel="stylesheet' %>
    <%= stylesheet_link_tag 'application', 'https://use.fontawesome.com/releases/v5.7.2/css/all.css' %>
  </head>

  <body>

    <div class="pull-right sign-in">
      <% if user_signed_in? %>
        Signed in as: <strong><%= current_user.email %></strong> |
        <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> - <%= link_to "Sign Out", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
      <% else %>
        <%= link_to "Sign Up", new_user_registration_path, :class => 'navbar-link'  %> -
        <%= link_to "Sign In", new_user_session_path, :class => 'navbar-link'  %>
      <% end %>
    </div>
    <div class="container">
      <ul class="nav nav-tabs">
        <li class="wisegui-nav"><%= link_to "WISEGUI", root_path %></li>
        <li><%= link_to "Wikis", wikis_path %></li>
      <% if user_signed_in? %>
        <li><%= link_to "Manage my Account", new_charge_path%></li>
      <%end%>
      </ul>

      <% if flash[:notice] %>
        <div class="alert alert-success">
          <%= flash[:notice] %>
        </div>
      <% elsif flash[:alert] %>
        <div class="alert alert-warning">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
